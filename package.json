{
  "name": "web-2025",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -F @web-2025/pages dev",
    "build": "pnpm -r build",
    "start": "pnpm -F @web-2025/pages start",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint --flag v10_config_lookup_from_file .",
    "lint:fix": "eslint --flag v10_config_lookup_from_file --fix .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,astro}\"",
    "check": "pnpm lint && pnpm format"
  },
  "engines": {
    "node": ">=22.17.1",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.8.3"
  }
}
